<%# coding: UTF-8 -%>
<form method="post" action="<%= @form_action || "register" %>" id="form"
      onsubmit="submitbutton = document.getElementById('register-submit'); submitbutton.value='<%= t.notice.please_wait %>'; submitbutton.disabled=true; return true;">
	 <h1>HPU Central Authentication Service</h1>
  <div class="inset">
  <p>
    <label for="name">Tài khoản</label>
    <input type="text" name="username" id="name">
  </p>
  <p>
    <label for="password1">Mật khẩu</label>
    <input type="password" name="password1" id="password1">
  </p> 
  <p>
    <label for="password2">Mật khẩu</label>
    <input type="password" name="password2" id="password2">
  </p> 
  </div>
  <p class="p-container">
    <span>Bạn quên mật khẩu?</span>   
        <input type="submit" class="button" accesskey="l" value="Register"
               tabindex="4" id="register-submit" />
  </p>  
</form>
